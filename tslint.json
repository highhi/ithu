{
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-empty": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-first"
      }
    ],
    "prettier": [true, {
      "printWidth": 150,
      "singleQuote": true,
      "semi": false,
      "arrowParens": "always",
      "trailingComma": "es5"
    }]
  }
}